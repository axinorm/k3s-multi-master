# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# 4 space indentation
[*.sh]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[{Dockerfile}]
indent_size = 4

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
